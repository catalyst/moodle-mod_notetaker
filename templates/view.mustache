{{!
    @template mod_notetaker/view

    The page to view and add notes to this notetaker instance.

    Classes required for JS:
    * None

    Data attibutes required for JS:
    * None

    Context variables required for this template:
    * None
}}

<div class="mod_view">
    <p>{{#str}} viewintro, mod_notetaker {{/str}}</p>

    <div class="py-3 text-right">
        <a href="{{config.wwwroot}}/mod/notetaker/addnote.php?cmid={{cmid}}" class="btn btn-primary">{{#str}} add, mod_notetaker {{/str}}</a>
    </div>

    <div class="card-columns">
        {{#note}}
        <div class="card border-secondary mb-3">
            <div class="card-body">
                <h5 class="card-title">{{name}}</h5>
                <h6 class="card-subtitle mb-2 text-muted">{{#str}} category, mod_notetaker {{/str}}</h6>
                <p class="card-text">
                {{{notecontent}}}
                </p>
                {{#tag}}
            <div class="badge badge-primary"><span class="sr-only">{{#str}} cardtag, mod_notetaker {{/str}}</span>{{.}}</div>
                {{/tag}}
                <div class="text-right">
                    <a href="{{config.wwwroot}}/mod/notetaker/viewnote.php?cmid={{cmid}}&note={{noteid}}" class="btn btn-outline-primary stretched-link" role="button">{{#str}} view, mod_notetaker {{/str}}</a>
                </div>
            </div>
            <div class="card-footer text-muted">
                <small>{{#str}} lastmodified, mod_notetaker {{/str}}{{lastmodified}}</small>
            </div>
        </div>
        {{/note}}
    </div>
</div>


