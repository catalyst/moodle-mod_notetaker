{{!
    @template mod_notetaker/view

    The page to view and add notes to this notetaker instance.

    Classes required for JS:
    * None

    Data attibutes required for JS:
    * None

    Context variables required for this template:
    * None    
}}

<div class="mod_view">
    <p>{{#str}} viewintro, mod_notetaker {{/str}}</p>

    <div class="py-3">
        <a href="{{config.wwwroot}}/mod/notetaker/addnote.php?id={{id}}" class="btn btn-primary">{{#str}} add, mod_notetaker {{/str}}</a>
    </div>

    <div class="card-columns">
        {{#note}}
        <div class="card border-secondary mb-3">
            <div class="card-body">
                <h5 class="card-title">{{name}}</h5>
                <h6 class="card-subtitle mb-2 text-muted">{{#str}} category, mod_notetaker {{/str}}</h6>
                <p class="card-text">
                {{notecontent}}
                </p>
                <a title="{{#str}} edit, mod_notetaker {{/str}}" href="{{config.wwwroot}}/local/newplugin/create.php?id={{id}}"><i class="icon fa fa-edit"></i></a>
                <a title="{{#str}} delete {{/str}}" href="?delete={{id}}"><i class="icon fa fa-trash"></i></a>
                <a href="" class="btn btn-outline-primary stretched-link" role="button">{{#str}} view, mod_notetaker {{/str}}</a>
            </div>
            <div class="card-footer text-muted">
                {{timecreated}}
            </div>
        </div>
        {{/note}} 
    </div>    

</div>


